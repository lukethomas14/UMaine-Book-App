<%- model_class = @book.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @book.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:price) %>:</strong><br>
  <%= @book.price %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:user_id) %>:</strong><br>
  <%= @book.user_id %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:condition) %>:</strong><br>
  <%= @book.condition %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:isbn) %>:</strong><br>
  <%= @book.isbn %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              books_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_book_path(@book), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              book_path(@book),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
